# .env.example

# Core Django Settings
# This secret key is for development/testing only.
# In production, this should be a long, randomly generated string.
SECRET_KEY=a-secret-key-for-development

# Set to "True" for development, "False" for production.
# The value is a string, which should be cast to a boolean in settings.py.
DEBUG=True

# List of allowed hostnames.
# For production, this should be your domain name(s).
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Use PostgreSQL for production, SQLite for development.
# Example for PostgreSQL:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=your_prod_db
# DB_USER=your_prod_user
# DB_PASSWORD=your_prod_password
# DB_HOST=localhost
# DB_PORT=5432

# Example for SQLite:
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Email Settings
# Required for sending emails (e.g., password reset, contact forms).
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Static and Media Files
# Paths for serving static and media files in production.
STATIC_URL=/static/
MEDIA_URL=/media/